#:import utils kivy.utils
<DerdePartij>:
    FloatLayout:
        #In de floatlayout kleur veranderen voor ieder grid
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#B2FF33")
            Rectangle:
                size: self.size
                pos: self.pos


        Label:
        #Naam pagina
            text: "Derden Partijen"
            color: 0,0,0,1
            rows: 1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .2
            font_size: 20

        BoxLayout:
        # 1e partij
            rows: 1
            pos_hint: {"top": .8, "left": 1}
            size_hint: 1, .1
            Label:
                text: 'Youtube'
                color: 0,0,0,1
            Switch:
                id: switch

        BoxLayout:
        # 1e partij
            rows: 1
            pos_hint: {"top": .7, "left": 1}
            size_hint: 1, .1
            Label:
                text: 'Videoland'
                color: 0,0,0,1
            Switch:
                id: switch

        BoxLayout:
        # 1e partij
            rows: 1
            pos_hint: {"top": .6, "left": 1}
            size_hint: 1, .1
            Label:
                text: 'telegraaf'
                color: 0,0,0,1
            Switch:
                id: switch

        BoxLayout:
        #Blockchain image
            rows: 1
            pos_hint: {"top": .4, "left": 1}
            size_hint: 1, .5
            ImageButton:
                source: "icons/1674734.png"
                pos_hint: {"top": 1, "left": 1}
                size_hint: .5, .5
                on_release:
                    print("released")
                    root.manager.current = 'home_screen'
